@if (Model.Count == 0)
{
    <div class="container">
        <div class="jumbotron">
            <h1>Oh no!</h1>
        </div>
        <p>This stylist doesn't have any clients at this time.</p>
        <a href="/clients/new" class="btn btn-success">Add Client</a>
    </div>
}

else
{
    <div class="container">
        <div class="jumbotron">
            <h1>Clients</h1>
        </div>
        @foreach (var client in Model)
        {
            <h3>@client.Name<a href="/clients/@client.Id" class="btn btn-sm btn-info">Manage</a></h3>
        }
    </div>
}
