@{
}

@{
    ViewData["Title"] = "Stylists";
}

<div class="container">
    <div class="jumbotron">
        <h1>Hair Stylists</h1>
    </div>
    @if (Model.Count == 0)
    {
    <h1>There are no stylists that work here at this time.</h1>
    <a href="/stylists/new" class="btn btn-success">Add New Stylist</a>
    }
    else
    {
    <ul>
        @foreach (var stylist in Model)
        {
        <li>@stylist.StylistName <a href="/stylists/@stylist.StylistId" class="btn btn-sm btn-info">Manage</a></li>
        }
    </ul>
    }

    <a href="/stylists/new" class="btn btn-success">Hire New Stylist</a>
    <a href="/stylists/delete" class="btn btn-success">Fire All Stylists</a>
</div>