@{
    ViewData["Title"] = "All Clients";
}

<div class="container">
    <div class="jumbotron">
        <h1>All Clients</h1>
    </div>
    @if (Model.Count == 0)
    {
    <h1>We do not have any clients at this time.</h1>
    <a href="/clients/new" class="btn btn-success">Add New Client</a>
    }
    else
    {
    <ul>
        @foreach (var client in Model)
        {
        <li>@client.Name <a href="/clients/@client.Id" class="btn btn-sm btn-info">Manage</a></li>
        }
    </ul>
    }

    <a href="/clients/new" class="btn btn-success">Add New Client</a>
    <a href="/clients/delete" class="btn btn-danger">Delete All Clients</a>
</div>