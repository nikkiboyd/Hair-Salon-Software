<form method="post" action="/clients/@Model["client"].Id/update">
    <div class="card center">
        <div class="form-group">
            <label for="newName">Client Name</label>
            <input type="text" name="newName" class="form-control" id="newName" placeholder="@Model["client"].Name" required>
        </div>
        <div class="form-group">
            <label for="newPhone">Client Phone</label>
            <input type="text" name="newPhone" class="form-control" id="newPhone" placeholder="@Model["client"].Phone" required>
        </div>
        <div class="form-group">
            <label for="newEmail">Client Email</label>
            <input type="text" name="newEmail" class="form-control" id="newEmail" placeholder="@Model["client"].Email" required>
        </div>
        <div class="form-group">
            <label for="newStylist">Stylist</label>
            <select name="newStylist" class="form-control" required>
                @foreach (var client in Model["stylists"])
                {
                <option value="@client.StylistId">@client.StylistName</option>
                }
            </select>
        </div>
        <button class="btn btn-primary" type="submit">Update Client Details</button>
    </div>
</form>