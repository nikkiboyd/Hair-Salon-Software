<form method="post" action="/specialties/@Model["specialty"].SpecialtyId/assign-stylist">
    <div class="card center">
        <div class="form-group">
            <label for="assignedStylist">Stylist</label>
            <select name="assignedStylist" class="form-control" required>
                @foreach (var stylist in Model["stylists"]) 
                {
                <option value="@stylist.StylistId">@stylist.StylistName</option>
                }

            </select>
            <button class="btn btn-primary" type="submit">Assign Specialty</button>
        </div>
    </div>
</form>