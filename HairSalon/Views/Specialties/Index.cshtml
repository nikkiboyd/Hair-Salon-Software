@{
}

<div class="container">
    <div class="jumbotron">
        <h1>All Specialties</h1>
    </div>
    @if (Model.Count == 0)
    {
    <h1>We do not have any specialties at this time.</h1>
    <a href="/specialties/new" class="btn btn-success">Add New Specialty</a>
    }
    else
    {
    <ul>
        @foreach (var specialty in Model)
        {
        <h3>@specialty.SpecialtyType <a href="/specialties/@specialty.SpecialtyId" class="btn btn-sm btn-info">View Details</a></h3>
        }
    </ul>
    }

    <a href="/specialties/new" class="btn btn-success">Add New Specialty</a>
    <a href="/specialties/delete" class="btn btn-danger">Delete All Specialties</a>
</div>